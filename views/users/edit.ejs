<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Cropper.js CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css">

    <style>
        body {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            min-height: 100vh;
            padding: 40px 0;
        }

        .main-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
        }

        .form-floating .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        }

        .btn-gradient {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
            border-radius: 25px;
        }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(40, 167, 69, 0.3);
        }

        .header-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            margin: 0 auto 20px;
        }

        .photo-upload {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto 20px;
            border-radius: 50%;
            border: 3px dashed #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .photo-upload:hover {
            border-color: #28a745;
            background-color: rgba(40, 167, 69, 0.05);
        }

        .photo-upload.has-photo {
            border: 3px solid #28a745;
        }

        .photo-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .photo-placeholder {
            text-align: center;
            color: #6c757d;
        }

        .file-input {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        /* Estilos para o modal de crop */
        .crop-modal .modal-dialog {
            max-width: 800px;
        }

        .crop-container {
            width: 100%;
            height: 400px;
            background-color: #f8f9fa;
            border-radius: 8px;
            overflow: hidden;
        }

        .crop-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid #28a745;
            margin: 0 auto;
        }

        .crop-controls {
            text-align: center;
            margin-top: 15px;
        }

        .crop-controls .btn {
            margin: 0 5px;
        }

        .crop-info {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card main-card">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <div class="header-icon">
                                <i class="bi bi-pencil-fill"></i>
                            </div>
                            <h1 class="h3 fw-bold text-dark mb-1"><%= title %></h1>
                            <p class="text-muted">Atualize os dados do usuário</p>
                        </div>

                        <!-- Error Messages -->
                        <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Por favor, corrija os seguintes erros:</strong>
                            </div>
                            <ul class="mb-0 ps-3">
                                <% errors.forEach(function(error) { %>
                                <li><%= error %></li>
                                <% }); %>
                            </ul>
                        </div>
                        <% } %>

                        <!-- Form -->
                        <form method="POST" action="/users/<%= user.id %>/edit" class="needs-validation" enctype="multipart/form-data" novalidate>
                            <!-- Photo Upload -->
                            <div class="text-center mb-4">
                                <div class="photo-upload <%= user.foto ? 'has-photo' : '' %>" onclick="document.getElementById('foto').click()">
                                    <input type="file" id="foto" name="foto" class="file-input" accept="image/*">
                                    <div id="photo-content">
                                        <% if (user.foto) { %>
                                            <img src="/uploads/users/<%= user.foto %>" alt="Foto atual" class="photo-preview">
                                        <% } else { %>
                                            <div class="photo-placeholder">
                                                <i class="bi bi-camera-fill fs-2 mb-1"></i>
                                                <div><small>Clique para adicionar foto</small></div>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <small class="text-muted">
                                    <% if (user.foto) { %>
                                        Clique para alterar a foto • Formatos: JPG, PNG, GIF (máx. 5MB)
                                    <% } else { %>
                                        Formatos aceitos: JPG, PNG, GIF (máx. 5MB)
                                    <% } %>
                                </small>
                            </div>

                            <div class="row">
                                <!-- Nome -->
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input
                                            type="text"
                                            id="nome"
                                            name="nome"
                                            class="form-control"
                                            placeholder="Digite o nome completo"
                                            value="<%= user.nome %>"
                                            required
                                        />
                                        <label for="nome">
                                            <i class="bi bi-person me-2"></i>Nome Completo
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o nome completo.
                                        </div>
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input
                                            type="email"
                                            id="email"
                                            name="email"
                                            class="form-control"
                                            placeholder="Digite o email"
                                            value="<%= user.email %>"
                                            required
                                        />
                                        <label for="email">
                                            <i class="bi bi-envelope me-2"></i>Email
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, informe um email válido.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Telefone -->
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input
                                            type="tel"
                                            id="telefone"
                                            name="telefone"
                                            class="form-control"
                                            placeholder="(11) 99999-9999"
                                            value="<%= user.telefone %>"
                                            required
                                        />
                                        <label for="telefone">
                                            <i class="bi bi-telephone me-2"></i>Telefone
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o telefone.
                                        </div>
                                    </div>
                                </div>

                                <!-- CPF -->
                                <div class="col-md-6">
                                    <div class="form-floating mb-4">
                                        <input
                                            type="text"
                                            id="cpf"
                                            name="cpf"
                                            class="form-control"
                                            placeholder="000.000.000-00"
                                            value="<%= user.cpf %>"
                                            required
                                            maxlength="14"
                                        />
                                        <label for="cpf">
                                            <i class="bi bi-credit-card-2-front me-2"></i>CPF
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, informe um CPF válido.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-gradient btn-lg text-white fw-bold py-3">
                                    <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                                </button>

                                <div class="d-flex gap-2 justify-content-center">
                                    <a href="/users/<%= user.id %>" class="btn btn-outline-info btn-lg px-4">
                                        <i class="bi bi-eye me-2"></i>Ver Usuário
                                    </a>
                                    <a href="/users" class="btn btn-outline-secondary btn-lg px-4">
                                        <i class="bi bi-arrow-left me-2"></i>Cancelar
                                    </a>
                                </div>
                            </div>
                        </form>

                        <!-- Footer -->
                        <div class="text-center mt-4 pt-3 border-top">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Todos os campos são obrigatórios
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para Crop da Imagem -->
    <div class="modal fade crop-modal" id="cropModal" tabindex="-1" aria-labelledby="cropModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-gradient text-white" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                    <h5 class="modal-title" id="cropModalLabel">
                        <i class="bi bi-crop me-2"></i>Ajustar Nova Foto
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="crop-container">
                                <img id="cropImage" style="max-width: 100%; display: none;" alt="Imagem para recorte">
                            </div>
                            <div class="crop-controls">
                                <button type="button" class="btn btn-outline-secondary btn-sm" id="cropZoomIn">
                                    <i class="bi bi-zoom-in"></i> Zoom +
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" id="cropZoomOut">
                                    <i class="bi bi-zoom-out"></i> Zoom -
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" id="cropRotateLeft">
                                    <i class="bi bi-arrow-counterclockwise"></i> Girar
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" id="cropReset">
                                    <i class="bi bi-arrow-clockwise"></i> Reset
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-center mb-3">
                                <i class="bi bi-eye me-2"></i>Nova Foto
                            </h6>
                            <div class="crop-preview" id="cropPreview"></div>
                            <div class="crop-info">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    <strong>Dicas:</strong><br>
                                    • Arraste para posicionar<br>
                                    • Use as bordas para redimensionar<br>
                                    • A imagem será salva em 300x300px
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-gradient text-white" id="cropConfirm" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                        <i class="bi bi-check-circle me-2"></i>Aplicar Nova Foto
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Cropper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

    <script>
        // Formatação automática do telefone
        document.getElementById('telefone').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 11) {
                value = value.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
            } else if (value.length >= 7) {
                value = value.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3');
            } else if (value.length >= 3) {
                value = value.replace(/(\d{2})(\d{0,5})/, '($1) $2');
            }
            e.target.value = value;
        });

        // Formatação automática do CPF
        document.getElementById('cpf').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            e.target.value = value;
        });

        // Evita que o evento de upload de foto dispare duas vezes
        document.getElementById('foto').addEventListener('click', function(e) {
            e.stopPropagation();
        });

        // Variáveis globais para o cropper
        let cropper = null;
        let currentFile = null;
        let croppedBlob = null;

        // Preview da nova foto e abertura do modal de crop
        document.getElementById('foto').addEventListener('change', function(e) {
            e.stopPropagation();

            const file = e.target.files[0];

            if (file) {
                // Validações básicas
                if (!file.type.startsWith('image/')) {
                    alert('Por favor, selecione apenas arquivos de imagem.');
                    return;
                }

                if (file.size > 5 * 1024 * 1024) { // 5MB
                    alert('A imagem deve ter no máximo 5MB.');
                    return;
                }

                currentFile = file;

                // Carrega a imagem no modal de crop
                const reader = new FileReader();
                reader.onload = function(e) {
                    const cropImage = document.getElementById('cropImage');
                    cropImage.src = e.target.result;
                    cropImage.style.display = 'block';

                    // Abre o modal
                    const cropModal = new bootstrap.Modal(document.getElementById('cropModal'));
                    cropModal.show();
                };
                reader.readAsDataURL(file);
            }
        });

        // Inicializar cropper quando o modal for mostrado
        document.getElementById('cropModal').addEventListener('shown.bs.modal', function() {
            const cropImage = document.getElementById('cropImage');

            if (cropper) {
                cropper.destroy();
            }

            cropper = new Cropper(cropImage, {
                aspectRatio: 1, // Quadrado para foto de perfil
                viewMode: 2,
                dragMode: 'move',
                autoCropArea: 0.8,
                restore: false,
                guides: true,
                center: true,
                highlight: false,
                cropBoxMovable: true,
                cropBoxResizable: true,
                toggleDragModeOnDblclick: false,
                minContainerWidth: 400,
                minContainerHeight: 300,
                preview: '#cropPreview'
            });
        });

        // Limpar cropper quando o modal for fechado
        document.getElementById('cropModal').addEventListener('hidden.bs.modal', function() {
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
        });

        // Controles do cropper
        document.getElementById('cropZoomIn').addEventListener('click', function() {
            if (cropper) cropper.zoom(0.1);
        });

        document.getElementById('cropZoomOut').addEventListener('click', function() {
            if (cropper) cropper.zoom(-0.1);
        });

        document.getElementById('cropRotateLeft').addEventListener('click', function() {
            if (cropper) cropper.rotate(-90);
        });

        document.getElementById('cropReset').addEventListener('click', function() {
            if (cropper) cropper.reset();
        });

        // Confirmar crop
        document.getElementById('cropConfirm').addEventListener('click', function() {
            if (!cropper) return;

            const canvas = cropper.getCroppedCanvas({
                width: 300,
                height: 300,
                minWidth: 256,
                minHeight: 256,
                maxWidth: 4096,
                maxHeight: 4096,
                fillColor: '#fff',
                imageSmoothingEnabled: false,
                imageSmoothingQuality: 'high'
            });

            canvas.toBlob(function(blob) {
                croppedBlob = blob;

                // Atualiza o preview na tela principal
                const photoUpload = document.querySelector('.photo-upload');
                const photoContent = document.getElementById('photo-content');
                const dataUrl = canvas.toDataURL('image/jpeg', 0.9);

                photoUpload.classList.add('has-photo');
                photoContent.innerHTML = `<img src="${dataUrl}" alt="Nova foto" class="photo-preview">`;

                // Fecha o modal
                const cropModal = bootstrap.Modal.getInstance(document.getElementById('cropModal'));
                cropModal.hide();

            }, 'image/jpeg', 0.9);
        });

        // Interceptar envio do formulário para incluir imagem croppada
        document.querySelector('form').addEventListener('submit', function(e) {
            if (croppedBlob) {
                e.preventDefault();

                // Cria FormData com todos os campos do formulário
                const formData = new FormData();
                formData.append('nome', document.getElementById('nome').value);
                formData.append('email', document.getElementById('email').value);
                formData.append('telefone', document.getElementById('telefone').value);
                formData.append('cpf', document.getElementById('cpf').value);

                // Adiciona a imagem croppada
                formData.append('foto', croppedBlob, 'cropped-image.jpg');

                // Envia via fetch
                fetch('/users/<%= user.id %>/edit', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        return response.text();
                    }
                })
                .then(html => {
                    if (html) {
                        document.open();
                        document.write(html);
                        document.close();
                    }
                })
                .catch(error => {
                    console.error('Erro ao enviar formulário:', error);
                    alert('Erro ao atualizar usuário. Tente novamente.');
                });
            }
        });

        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Validação de CPF
        function validarCPF(cpf) {
            // Remove caracteres não numéricos
            cpf = cpf.replace(/[^\d]/g, '');

            // Verifica se o CPF tem 11 dígitos e se todos os dígitos são iguais (ex: 111.111.111-11)
            if (cpf.length !== 11 || /^(\d)\1{10}$/.test(cpf)) return false;

            // Cálculo do primeiro dígito verificador
            let soma = 0;
            for (let i = 1; i <= 9; i++) {
                soma += parseInt(cpf.substring(i - 1, i)) * (11 - i);
            }
            let resto = (soma * 10) % 11;

            if (resto === 10 || resto === 11) resto = 0;

            // Verifica o primeiro dígito verificador
            if (resto !== parseInt(cpf.substring(9, 10))) return false;

            // Cálculo do segundo dígito verificador
            soma = 0;
            for (let i = 1; i <= 10; i++) {
                soma += parseInt(cpf.substring(i - 1, i)) * (12 - i);
            }
            resto = (soma * 10) % 11;

            if (resto === 10 || resto === 11) resto = 0;

            // Verifica o segundo dígito verificador
            return resto === parseInt(cpf.substring(10, 11));
        }

        // Validação em tempo real do CPF
        document.getElementById('cpf').addEventListener('blur', function(e) {
            const cpf = e.target.value;
            if (cpf && !validarCPF(cpf)) {
                e.target.setCustomValidity('CPF inválido');
            } else {
                e.target.setCustomValidity('');
            }
        });

        // Remove validação customizada no submit para evitar conflitos
        document.getElementById('cpf').addEventListener('input', function(e) {
            e.target.setCustomValidity('');
        });
    </script>
</body>
</html>