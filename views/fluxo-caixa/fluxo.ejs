            this.setCustomValidity('');
        });

        // Auto-foco no primeiro campo quando modal abrir
        novaContaModal.addEventListener('shown.bs.modal', function() {
            nomeContaInput.focus();
        });

        // === MODAL DE NOVA MOVIMENTA√á√ÉO ===

        const novaMovimentacaoModal = document.getElementById('novaMovimentacaoModal');
        const novaMovimentacaoForm = novaMovimentacaoModal.querySelector('form');
