                document.getElementById('movValorTipo').innerHTML = '<small class="text-muted">Digite o valor</small>';

                // Abrir modal
                const modal = new bootstrap.Modal(novaMovimentacaoModal);
                modal.show();
            }
        });

        // Limpar formul√°rio quando modal de movimenta√ß√£o for fechada
