        // Controle da Modal de Nova Conta
        const novaContaModal = document.getElementById('novaContaModal');
        const novaContaForm = novaContaModal.querySelector('form');

        // Limpar formul√°rio quando modal for fechada
        novaContaModal.addEventListener('hidden.bs.modal', function() {
            novaContaForm.reset();
            novaContaForm.classList.remove('was-validated');

            // Limpar mensagens de valida√ß√£o customizadas
            const inputs = novaContaForm.querySelectorAll('input, select');
            inputs.forEach(input => {
                input.setCustomValidity('');
            });

            // Resetar estado da nova categoria
            novaCategoriaDiv.style.display = 'none';
            novaCategoriaNomeInput.required = false;
            novaCategoriaNomeInput.value = '';
            categoriaSelect.required = true;

            // Resetar feedback do tipo de conta
            tipoContaSelect.className = 'form-select';
        });

        // Array de contas existentes gerado pelo servidor
        const dadosContasJS = <%- JSON.stringify(dadosPorContaMes) %>;
        const nomesContasExistentes = Object.values(dadosContasJS).map(item =>
            item.conta.nomeConta.toLowerCase()
        );
        const contasExistentesArray = JSON.stringify(nomesContasExistentes);

        // Valida√ß√£o em tempo real do nome da conta
        const nomeContaInput = document.getElementById('nomeConta');
        nomeContaInput.addEventListener('blur', function() {
            const nome = this.value.trim();
            if (nome && contasExistentesArray.includes(nome.toLowerCase())) {
                this.setCustomValidity('J√° existe uma conta com este nome');
            } else {
                this.setCustomValidity('');
            }
        });

        // Limpar valida√ß√£o customizada quando o usu√°rio digita
        nomeContaInput.addEventListener('input', function() {
            this.setCustomValidity('');
        });

        // Valida√ß√£o do formul√°rio da modal
        novaContaForm.addEventListener('submit', function(event) {
            let isValid = true;

            // Valida√ß√£o especial para nova categoria
            if (categoriaSelect.value === 'nova') {
                const nomeNovaCategoria = novaCategoriaNomeInput.value.trim();

                if (!nomeNovaCategoria) {
                    novaCategoriaNomeInput.setCustomValidity('Nome da categoria √© obrigat√≥rio');
                    isValid = false;
                } else if (nomeNovaCategoria.length < 2) {
                    novaCategoriaNomeInput.setCustomValidity('O nome deve ter pelo menos 2 caracteres');
                    isValid = false;
                } else {
                    // Verificar se n√£o existe categoria com mesmo nome
                    const categoriasExistentes = [
                        <% todasCategorias.forEach(function(categoria, index) { %>
                        '<%= categoria.categoria.toLowerCase() %>'<%= index < todasCategorias.length - 1 ? ',' : '' %>
                        <% }); %>
                    ];

                    if (categoriasExistentes.includes(nomeNovaCategoria.toLowerCase())) {
                        novaCategoriaNomeInput.setCustomValidity('J√° existe uma categoria com este nome');
                        isValid = false;
                    } else {
                        novaCategoriaNomeInput.setCustomValidity('');
                    }
                }
            }

            // Valida√ß√£o padr√£o do formul√°rio
            if (!this.checkValidity() || !isValid) {
                event.preventDefault();
                event.stopPropagation();
            }

            this.classList.add('was-validated');
        });

        // Feedback visual na sele√ß√£o do tipo de conta
