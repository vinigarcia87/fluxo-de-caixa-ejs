                document.getElementById('movContaCategoria').textContent = contaCategoria;
                document.getElementById('movMesSelect').value = mes;
                document.getElementById('movAnoInput').value = ano;

                // Atualizar √≠cone da conta baseado no tipo
                const iconesConta = {
                    'RECEITA': 'bi-arrow-up-circle text-success',
                    'DESPESA': 'bi-arrow-down-circle text-danger',
                    'SALDO': 'bi-cash-stack text-primary'
                };

