        // Formata√ß√£o de valor em tempo real
        function formatarValorBrasileiro(valor) {
            // Remove tudo exceto n√∫meros e v√≠rgula
            valor = valor.replace(/[^\d,]/g, '');

            // Se tem v√≠rgula, separa parte inteira da decimal
            let partes = valor.split(',');
            let parteInteira = partes[0];
            let parteDecimal = partes[1];

            // Formata a parte inteira com pontos
            parteInteira = parteInteira.replace(/\B(?=(\d{3})+(?!\d))/g, '.');

            // Limita parte decimal a 2 d√≠gitos
            if (parteDecimal !== undefined) {
                parteDecimal = parteDecimal.substring(0, 2);
                return parteInteira + ',' + parteDecimal;
            }

            return parteInteira;
        }

