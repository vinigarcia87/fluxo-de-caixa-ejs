        // === CONTROLE DA NOVA CATEGORIA ===
        const categoriaSelect = document.getElementById('categoriaId');
        const novaCategoriaDiv = document.getElementById('novaCategoriaDiv');
        const novaCategoriaNomeInput = document.getElementById('novaCategoriaNome');
        const cancelarNovaCategoriaBtn = document.getElementById('cancelarNovaCategoria');

        // Controlar exibi√ß√£o do campo de nova categoria
