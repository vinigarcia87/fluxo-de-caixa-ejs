                document.getElementById('novaCategoriaFeedback').textContent = 'J√° existe uma categoria com este nome';
            } else if (nome && nome.length < 2) {
                this.setCustomValidity('O nome deve ter pelo menos 2 caracteres');
                document.getElementById('novaCategoriaFeedback').textContent = 'O nome deve ter pelo menos 2 caracteres';
            } else {
                this.setCustomValidity('');
                document.getElementById('novaCategoriaFeedback').textContent = 'Por favor, informe o nome da nova categoria.';
            }
        });

        // Limpar valida√ß√£o quando usu√°rio digita
