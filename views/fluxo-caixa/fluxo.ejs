                novaCategoriaNomeInput.value = '';

                // Restaurar required do select
                categoriaSelect.required = true;

                // Limpar valida√ß√µes
                novaCategoriaNomeInput.setCustomValidity('');
                novaCategoriaDiv.querySelector('.invalid-feedback').style.display = 'none';
            }
