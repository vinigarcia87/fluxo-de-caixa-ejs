<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .main-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .table-container {
            border-radius: 10px;
            overflow: hidden;
        }

        .btn-floating {
            border-radius: 25px;
            padding: 8px 20px;
        }

        .header-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            margin: -24px -24px 20px -24px;
            padding: 30px 24px;
        }

        .user-photo {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #e9ecef;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card main-card">
            <div class="card-body p-4">
                <!-- Header -->
                <div class="header-gradient">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-1">
                                <i class="bi bi-people-fill me-2"></i><%= title %>
                            </h1>
                            <p class="mb-0 opacity-75">Gerencie todos os usuários do sistema</p>
                        </div>
                        <a href="/users/add" class="btn btn-light btn-floating">
                            <i class="bi bi-plus-circle me-1"></i>Adicionar Usuário
                        </a>
                    </div>
                </div>

                <!-- Message Alert -->
                <% if (message) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i><%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                <!-- Users Table -->
                <% if (users.length > 0) { %>
                <div class="table-container">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center" style="width: 80px;">
                                        <i class="bi bi-image me-1"></i>Foto
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-person me-1"></i>Nome
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-envelope me-1"></i>Email
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-telephone me-1"></i>Telefone
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-credit-card-2-front me-1"></i>CPF
                                    </th>
                                    <th scope="col" class="text-center">
                                        <i class="bi bi-gear me-1"></i>Ações
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user) { %>
                                <tr>
                                    <td class="text-center">
                                        <% if (user.foto) { %>
                                            <img src="/uploads/users/<%= user.foto %>" alt="Foto de <%= user.nome %>" class="user-photo">
                                        <% } else { %>
                                            <div class="user-avatar">
                                                <%= user.nome.charAt(0).toUpperCase() %>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-bold"><%= user.nome %></div>
                                                <small class="text-muted">ID: #<%= user.id %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="mailto:<%= user.email %>" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1"></i><%= user.email %>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="tel:<%= user.telefone.replace(/\D/g, '') %>" class="text-decoration-none">
                                            <i class="bi bi-phone me-1"></i><%= user.telefone %>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-person-badge me-1"></i><%= user.cpf %>
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="/users/<%= user.id %>" class="btn btn-outline-info btn-sm" title="Ver detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/users/<%= user.id %>/edit" class="btn btn-outline-warning btn-sm" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form style="display: inline;" method="POST" action="/users/<%= user.id %>/delete"
                                                  onsubmit="return confirm('Tem certeza que deseja remover este usuário?')">
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Remover">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Stats -->
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Total de usuários: <strong><%= users.length %></strong>
                    </small>
                </div>

                <% } else { %>
                <!-- Empty State -->
                <div class="text-center py-5">
                    <div class="display-1 text-muted mb-3">
                        <i class="bi bi-people"></i>
                    </div>
                    <h4 class="text-muted">Nenhum usuário encontrado</h4>
                    <p class="text-muted mb-4">Comece adicionando o primeiro usuário ao sistema</p>
                    <a href="/users/add" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Adicionar Primeiro Usuário
                    </a>
                </div>
                <% } %>

                <!-- Footer Actions -->
                <div class="d-flex justify-content-center mt-4 pt-3 border-top">
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-house me-2"></i>Voltar ao Início
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>