<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="shortcut icon" href="/favicon.png">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .main-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
        }

        .stat-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            height: 120px;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
        }

        .header-actions {
            margin-bottom: 2rem;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .valor-receita {
            color: #28a745;
            font-weight: bold;
        }

        .valor-despesa {
            color: #dc3545;
            font-weight: bold;
        }

        .valor-saldo {
            color: #007bff;
            font-weight: bold;
        }

        .chart-container {
            position: relative;
            height: 300px;
            margin: 20px 0;
        }

        .breadcrumb {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="bi bi-house"></i> Início</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <i class="bi bi-graph-up"></i> Fluxo de Caixa
                </li>
            </ol>
        </nav>

        <!-- Header com Ações -->
        <div class="header-actions">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="text-white mb-0">
                        <i class="bi bi-graph-up me-2"></i>Dashboard Financeiro
                    </h1>
                    <p class="text-white-50 mb-0">Visão geral do seu fluxo de caixa</p>
                </div>
                <div class="col-auto">
                    <div class="btn-group" role="group">
                        <a href="/fluxo-caixa/fluxo" class="btn btn-light">
                            <i class="bi bi-table me-2"></i>Ver Fluxo
                        </a>
                        <a href="/fluxo-caixa/movimentacoes/add" class="btn btn-outline-light">
                            <i class="bi bi-plus-circle me-2"></i>Nova Movimentação
                        </a>
                        <a href="/fluxo-caixa/movimentacoes" class="btn btn-outline-light">
                            <i class="bi bi-list me-2"></i>Ver Todas
                        </a>
                        <a href="/fluxo-caixa/relatorios" class="btn btn-outline-light">
                            <i class="bi bi-graph-up-arrow me-2"></i>Relatórios
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mensagem de Sucesso -->
        <% if (message) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i><%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <!-- Cards de Resumo -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card bg-success text-white">
                    <div class="card-body d-flex align-items-center">
                        <div class="stat-icon bg-light bg-opacity-20 me-3">
                            <i class="<%= getIconeTipoConta(TipoConta.RECEITA) %>"></i>
                        </div>
                        <div>
                            <h6 class="card-title mb-1">Receitas</h6>
                            <h4 class="mb-0">R$ <%= resumo.receitas.toFixed(2).replace('.', ',') %></h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card bg-danger text-white">
                    <div class="card-body d-flex align-items-center">
                        <div class="stat-icon bg-light bg-opacity-20 me-3">
                            <i class="<%= getIconeTipoConta(TipoConta.DESPESA) %>"></i>
                        </div>
                        <div>
                            <h6 class="card-title mb-1">Despesas</h6>
                            <h4 class="mb-0">R$ <%= resumo.despesas.toFixed(2).replace('.', ',') %></h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card bg-info text-white">
                    <div class="card-body d-flex align-items-center">
                        <div class="stat-icon bg-light bg-opacity-20 me-3">
                            <i class="bi bi-calculator"></i>
                        </div>
                        <div>
                            <h6 class="card-title mb-1">Resultado</h6>
                            <h4 class="mb-0">R$ <%= resumo.resultado.toFixed(2).replace('.', ',') %></h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card bg-primary text-white">
                    <div class="card-body d-flex align-items-center">
                        <div class="stat-icon bg-light bg-opacity-20 me-3">
                            <i class="<%= getIconeTipoConta(TipoConta.SALDO) %>"></i>
                        </div>
                        <div>
                            <h6 class="card-title mb-1">Saldo Atual</h6>
                            <h4 class="mb-0">R$ <%= resumo.saldoAtual.toFixed(2).replace('.', ',') %></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Conteúdo Principal -->
        <div class="row">
            <!-- Últimas Movimentações -->
            <div class="col-lg-8 mb-4">
                <div class="card main-card">
                    <div class="card-header bg-transparent border-0 pb-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-clock-history me-2"></i>Últimas Movimentações
                            </h5>
                            <a href="/fluxo-caixa/movimentacoes" class="btn btn-outline-primary btn-sm">
                                Ver Todas <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (ultimasMovimentacoes.length === 0) { %>
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <p class="text-muted mt-2">Nenhuma movimentação encontrada</p>
                            <a href="/fluxo-caixa/movimentacoes/add" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Criar primeira movimentação
                            </a>
                        </div>
                        <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Conta</th>
                                        <th>Categoria</th>
                                        <th class="text-end">Valor</th>
                                        <th width="100"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% ultimasMovimentacoes.forEach(function(mov) { %>
                                    <tr>
                                        <td>
                                            <small class="text-muted">
                                                <%= mov.getDataFormatada() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="<%= getIconeTipoConta(mov.conta.tipoConta) %> text-<%= getCorTipoConta(mov.conta.tipoConta) %> me-2"></i>
                                                <%= mov.conta.nomeConta %>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                <%= mov.conta.categoriaConta.categoria %>
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <span class="valor-<%= mov.conta.tipoConta.toLowerCase() %>">
                                                <%= mov.getValorFormatado() %>
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/fluxo-caixa/movimentacoes/<%= mov.id %>/edit"
                                                   class="btn btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Ações Rápidas -->
            <div class="col-lg-4 mb-4">
                <div class="card main-card">
                    <div class="card-header bg-transparent border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-lightning me-2"></i>Ações Rápidas
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/fluxo-caixa/movimentacoes/add" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>Nova Movimentação
                            </a>
                            <a href="/fluxo-caixa/contas" class="btn btn-primary">
                                <i class="bi bi-gear me-2"></i>Gerenciar Contas
                            </a>
                            <a href="/fluxo-caixa/relatorios" class="btn btn-info">
                                <i class="bi bi-graph-up-arrow me-2"></i>Ver Relatórios
                            </a>
                            <hr>
                            <a href="/users" class="btn btn-outline-secondary">
                                <i class="bi bi-people me-2"></i>Gerenciar Usuários
                            </a>
                        </div>

                        <!-- Resumo Rápido -->
                        <div class="mt-4 p-3 bg-light rounded">
                            <h6 class="mb-3">Resumo Rápido</h6>
                            <div class="row text-center">
                                <div class="col-12 mb-2">
                                    <small class="text-muted">Movimentações (último mês)</small>
                                    <div class="fw-bold"><%= movimentacoesPeriodo.length %></div>
                                </div>
                                <div class="col-6">
                                    <small class="text-success">Receitas</small>
                                    <div class="text-success fw-bold">
                                        <%= movimentacoesPeriodo.filter(m => m.isReceita()).length %>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-danger">Despesas</small>
                                    <div class="text-danger fw-bold">
                                        <%= movimentacoesPeriodo.filter(m => m.isDespesa()).length %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Auto-fechar alertas após 5 segundos
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Adicionar animações de entrada
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.stat-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.3s ease';

                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 100);
            });
        });
    </script>
</body>
</html>