# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# Fluxo de Caixa - Ambiente de Desenvolvimento
# ========================================

# Ambiente de execução
NODE_ENV=development

# Porta do servidor local
PORT=3000

# Configurações de sessão para desenvolvimento
SESSION_SECRET=dev-fluxo-caixa-secret-key-2024-abcdef123456789012345678901234567890
SESSION_SECURE=false
SESSION_MAX_AGE=86400000

# Configurações de debug
DEBUG=fluxo-caixa:*
LOG_LEVEL=debug

# Configurações de banco (se usar futuramente)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fluxo_caixa_dev
# DB_USER=dev_user
# DB_PASS=dev_password

# URLs base para desenvolvimento
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Configurações de upload (desenvolvimento)
UPLOAD_DIR=public/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Configurações de cache (desenvolvimento - desabilitado)
CACHE_ENABLED=false
CACHE_TTL=300

# Configurações de email (desenvolvimento - mock)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@localhost
SMTP_HOST=localhost
SMTP_PORT=1025

# ========================================
# OBSERVAÇÕES IMPORTANTES:
# - Este arquivo é para desenvolvimento local
# - Chaves e senhas são simples para facilitar desenvolvimento
# - NÃO use essas configurações em produção
# - Mantenha este arquivo no .gitignore
