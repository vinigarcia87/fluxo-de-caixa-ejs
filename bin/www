#!/usr/bin/env node

/**
 * Servidor HTTP refatorado com melhores pr√°ticas
 */

// Configurar ambiente antes de importar m√≥dulos
require('dotenv').config();
const config = require('../src/config/environment');

/**
 * Carregamento de m√≥dulos principais
 */
const app = require('../src/app');
const debug = require('debug')('fluxo-de-caixa:server');
const http = require('http');
const { logger } = require('../src/utils/logger');

/**
 * Obter porta da configura√ß√£o
 */
const port = normalizePort(config.PORT);
app.set('port', port);

/**
 * Criar servidor HTTP
 */
const server = http.createServer(app);

/**
 * Configurar listeners do servidor
 */
server.listen(port, config.HOST);
server.on('error', onError);
server.on('listening', onListening);

// Configurar graceful shutdown
process.on('SIGTERM', gracefulShutdown);
process.on('SIGINT', gracefulShutdown);

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      logger.error(`${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      logger.error(`${bind} is already in use`);
      process.exit(1);
      break;
    default:
      logger.error('Server error:', error);
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;

  debug('Listening on ' + bind);

  // Log startup info
  logger.info(`üöÄ ${config.app.name} v${config.app.version}`);
  logger.info(`üìä Ambiente: ${config.NODE_ENV}`);
  logger.info(`üåê Servidor iniciado em http://${config.HOST}:${addr.port}`);

  // Exibir informa√ß√µes de desenvolvimento
  if (config.isDevelopment) {
    logger.info('üîß Modo de desenvolvimento ativo');
    logger.info(`üìù Logs: ${config.logging.level}`);

    // URLs √∫teis
    console.log('\nüìã URLs √∫teis:');
    console.log(`   ‚Ä¢ Dashboard: http://${config.HOST}:${addr.port}/fluxo-caixa`);
    console.log(`   ‚Ä¢ Movimenta√ß√µes: http://${config.HOST}:${addr.port}/fluxo-caixa/movimentacoes`);
    console.log(`   ‚Ä¢ Fluxo: http://${config.HOST}:${addr.port}/fluxo-caixa/fluxo`);
    console.log(`   ‚Ä¢ Relat√≥rios: http://${config.HOST}:${addr.port}/fluxo-caixa/relatorios`);

    if (config.features.enableDebugRoutes) {
      console.log(`   ‚Ä¢ Debug Contas: http://${config.HOST}:${addr.port}/fluxo-caixa/debug/contas/ordem`);
    }

    console.log('\nüéØ Para come√ßar:');
    console.log('   ‚Ä¢ npm run dev - Desenvolvimento com auto-reload');
    console.log('   ‚Ä¢ npm run test - Executar testes');
    console.log('   ‚Ä¢ npm run lint - Verificar c√≥digo');
    console.log('');
  }
}

/**
 * Graceful shutdown handler
 */
function gracefulShutdown(signal) {
  logger.info(`Recebido ${signal}, iniciando shutdown graceful...`);

  // Parar de aceitar novas conex√µes
  server.close((err) => {
    if (err) {
      logger.error('Erro durante shutdown:', err);
      process.exit(1);
    }

    logger.info('Servidor fechado com sucesso');

    // Limpar recursos adicionais aqui
    // Por exemplo: fechar conex√µes de banco de dados, limpar cache, etc.

    process.exit(0);
  });

  // For√ßar encerramento ap√≥s timeout
  setTimeout(() => {
    logger.error('For√ßando encerramento ap√≥s timeout');
    process.exit(1);
  }, 10000);
}

// Tratamento de erros n√£o capturados
process.on('uncaughtException', (err) => {
  logger.error('Exce√ß√£o n√£o capturada:', err);
  gracefulShutdown('UNCAUGHT_EXCEPTION');
});

process.on('unhandledRejection', (reason, promise) => {
  logger.error('Promise rejeitada n√£o tratada:', { reason, promise });
  gracefulShutdown('UNHANDLED_REJECTION');
});
