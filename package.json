{
  "name": "fluxo-de-caixa",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Controle de Fluxo de Caixa - Versão Refatorada",
  "main": "bin/www",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node ./bin/www",
    "dev": "cp .env.development .env && nodemon ./bin/www",
    "prod": "cp .env.production .env && node ./bin/www",
    "watch": "cp .env.development .env && nodemon ./bin/www --watch src --watch views --watch models --watch config",
    "lint": "eslint src/ routes/ models/ config/",
    "lint:fix": "eslint src/ routes/ models/ config/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "ejs-lint": "npx ejs-lint views/**/*.ejs",
    "ejs-lint-single": "npx ejs-lint",
    "ejs-lint-watch": "nodemon --watch views --ext ejs --exec \"npm run ejs-lint\"",
    "build": "npm install --production",
    "setup-dev": "cp .env.development .env && echo 'Ambiente de desenvolvimento configurado!'",
    "setup-prod": "cp .env.production .env && echo 'Ambiente de produção configurado! LEMBRE-SE de ajustar as configurações!'",
    "env-check": "node config/env-validator.js",
    "prestart": "npm run ejs-lint",
    "predeploy": "npm run lint && npm run test && npm run ejs-lint",
    "deploy-prepare": "npm run setup-prod && npm run predeploy && echo 'Deploy preparado! Projeto validado.'",
    "heroku-postbuild": "npm run ejs-lint",
    "logs:clear": "rm -rf logs/*.log",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "sharp": "^0.33.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "ejs-lint": "^2.0.1",
    "eslint": "^9.12.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "fluxo-de-caixa",
    "controle-financeiro",
    "ejs",
    "financial-management"
  ],
  "author": {
    "name": "Seu Nome",
    "email": "seu.email@exemplo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seu-usuario/fluxo-de-caixa.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/fluxo-de-caixa/issues"
  },
  "homepage": "https://github.com/seu-usuario/fluxo-de-caixa#readme"
}